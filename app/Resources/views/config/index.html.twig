{% extends 'base.html.twig' %}

{% block body %}
    <h1>Configs list</h1>

    <table class="table table-striped table-sm table-hover">
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for config in configs %}
            <tr>
                <td>{{ config.key }}</td>
                <td>{{ config.value }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('config_show', { 'id': config.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('config_edit', { 'id': config.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_new') }}">Create a new config</a>
        </li>
    </ul>
{% endblock %}
