{% extends 'base.html.twig' %}

{% block title %} | Liste des joueurs{% endblock %}

{% block body %}
    <h1>Joueurs list</h1>
    <div>{{joueurs|length}} Joueurs</div>
    <table class="table table-striped table-sm table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>NOM Pr√©nom</th>
                <th>Moyenne {{ type }}</th>
                <th>Licence</th>
                <th>Date inscription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td><a href="{{ path('joueur_show', { 'id': joueur.id }) }}">{{ joueur.id }}</a></td>
                <td>{{ joueur.nom }}</td>
                <td>{% if type == "MX" %}{{ joueur.coteMixte }} ({{ joueur.classementMixte }}){% elseif type == "Simple" %}{{ joueur.coteSimple }} ({{ joueur.classementSimple }}){% else %}{{ joueur.coteDouble }} ({{ joueur.classementDouble }}){% endif %}</td>
                <td>{{ joueur.licence }}</td>
                <td>{{ joueur.dateInscription|date('d-m-Y') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('joueur_show', { 'id': joueur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('joueur_edit', { 'id': joueur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>{{joueurs|length}} Joueurs</div>

    <ul>
        <li>
            <a href="{{ path('joueur_new') }}">Create a new joueur</a> |
            <a href="{{ path('joueur_importer') }}">Importer joueurs</a> |
            <a href="{{ path('joueur_moyenne') }}">Maj moyennes</a>
        </li>
    </ul>
{% endblock %}
